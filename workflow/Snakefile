def send_data_to_websocket(data_type, tool, message):
	load_dotenv('.env')
	ws = create_connection(f"ws://{os.getenv('WEBSOCKET_URL')}/{os.getenv('BASE_URL')}wsa/backend/")
	websocket_data = {
		"type": data_type,
		"data": {
			"tool": tool,
			"message": message,
			"timestamp": str(pendulum.now('Asia/Kolkata')),
		}
	}
	ws.send(json.dumps(websocket_data))
	sleep(1)
	ws.close()

onsuccess:
	send_data_to_websocket("SUCCESS", None, "Completed Workflow")

